@media screen and (min-width:980px)
	.banner
		height 550px
		.home-slider-item
			height 550px

		.item-info
			text-align left
			display block
		
		.cotizador
			width 33.33%
			height 550px
			float right

.icons
	text-align center
	&-item 
		display inline-block
		vertical-align top
		padding 1rem 3rem
		color #000
		.icon 
			width 80px
			height 80px
			position relative
			display inline-block
			font-size 3rem
			box-shadow 1px 1px 5px rgba(0,0,0,.5)
			border-radius 50%
			i
			svg
				position absolute
				top 50%
				left 50%
				transform translate(-50%,-50%)
				color oscuro
		span
			padding-top .5rem
			display block
			font-size 1.2rem
			font-family 'Montserrat'
		
			
			
			
@media screen and (min-width:980px)			
	.icons
		&-item
			padding 2rem 3rem

.owl-carousel .owl-nav button.owl-prev, .owl-carousel .owl-nav button.owl-next, .owl-carousel button.owl-dot
	position absolute
	top 50%
	transform translate(0, -50%)
	color white 
	background-color oscuro 
	font-size 3rem 
	padding .5rem 1rem !important
.properties
	padding-top 2rem 
	padding-bottom 2rem
	&-title
		font-family 'Lato'
		font-weight 300
		font-size 2.5rem
	.owl-nav 
		display block !important

	// .owl-prev
	// .owl-next
	// 	position absolute
	// 	top 50%
	// 	transform translate(0, -50%)
	// 	color white !important
	// 	background-color oscuro !important
	// 	font-size 3rem !important
