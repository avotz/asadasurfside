	.owl-prev
		left 0
	.owl-next
		right 0
	.owl-carousel 
		.owl-item
			position: relative;
			opacity: .35;
			transition: opacity 500ms;
			&.center 
				opacity: 1;

	&-slider-item
		background-color #efeee9
		min-height 450px
		overflow hidden
		position relative
		&-image
			position relative
			height 450px
			overflow hidden
			a 
				display block
				height 450px
				position relative
				&:hover
					.overlay
						background-color: rgba(#1f9ac7,.9);
						.icon 
							opacity 1
							
			img 
				min-height 100%
				min-width 100%
			.overlay
				position absolute
				top 0
				left 0
				bottom 0
				right 0
				z-index: 20
				transition: background-color 300ms
				.icon 
					width: 57px;
					height: 57px;
					position: absolute;
					top: 50%;
					left: 50%;
					margin-left: -28px;
					margin-top: -28px;
					border: 2px solid #fff;
					opacity: 0;
					transition: opacity 300ms,border-radius 300ms;
					&:hover
						border-radius 50%
					i
					svg 
						position absolute
						top 50%
						left 50%
						transform translate(-50%, -50%)
						color white
						font-size 1.5rem
		&-details
			padding 40px 30px 50px
			text-align center
			position relative
			h4
				font-family 'Montserrat'
				color #999
				text-transform uppercase
				font-size: .875em;
				letter-spacing: 1px;
				margin-bottom 10px
			h3
				color oscuro
				font-family 'Lato'
				font-weight 300
				font-size 1.5rem
				margin-bottom 15px
			p 
				font-size: .875em;
				color #999


.latest-news
	padding-top 2rem
	padding-bottom 4rem
	background-color #efeee9
	&-title
		font-family 'Lato'
		font-weight 300
		font-size 2.5rem
	&-item
		height auto//400px
		padding: 5px
		&:hover
			figure
				transform: scale3d(1.06, 1.06, 1);
		a 
			color #999
		figure
			transition: transform 0.8s cubic-bezier(0.3, 0, 0.26, 1);
		&-image
			position: relative;
			height: 300px;
			overflow: hidden;
			z-index: 1;
			width: 100%;
			float: left;
			&:after
				content: '';
				position: absolute;
				bottom: 0;
				left: 0;
				//width: 100%;
				right 0;
				height: 0;
				border-bottom: solid 32px #fff;
				border-right: solid 32px transparent;
			.bg-image
				background-position center center
				background-size cover
				background-repeat no-repeat
				height 100%
		&-text 
			width: 100%
			float: left
			height auto
			padding 20px 30px
			h3 
				font-weight 700
				font-family 'Montserrat'
				text-transform uppercase
				margin-bottom 1rem
				font-size 1.1rem
				line-height 1.3rem
				letter-spacing .05em
				&:after
					content: '';
					display: block;
					width: 58.33333%;
					height: 1px;
					background-color: oscuro;
					margin-top: 1em;
			.bodytext
				font-size 13px
				line-height 1.5rem
			a.readmore 
				&:hover
					color oscuro
	&-inner
		position: relative;
		background-color: #fff;
		width: 100%;
		height: 100%;
		overflow: hidden;

@media screen and (min-width:980px)
	.latest-news
		&-item
			height 400px
			&-image
				position: absolute;
				top: 0;
				left: 33.33333%;
				right: 0;
				margin-left: -32px;
				width: auto;
				height 100%
				&:after
					top: 0;
					left: 0;
					right auto;
					width: 0;
					height: 100%;
					border-left: solid 32px #fff;
					border-top: solid 32px transparent;
					border-bottom: 0;
					border-right: 0;
					z-index: 1;
					overflow: hidden;
			&-text 
				width: 33.33333%
				float: left
				height 100%
				padding 40px 50px
				position relative
				z-index 2

