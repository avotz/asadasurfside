@import "normalize.styl"
@import "icons.styl"
@import "../css/owl.carousel.css"
@import "tables.styl"
oscuro = #1f9ac7
verde = #c0c626
naranja = #FF9800
azul = #1f9ac7

*
	box-sizing border-box

body
	font-family 'Lato', sans-serif
	font-size 16px
	line-height 30px
	

ul
	margin 0
	padding 0
	

a
	text-decoration none
	transition all .5s ease
p 
	margin-top 0
	margin-bottom 1.25rem
h1
h2
h3
h4
h5
	font-family 'Montserrat', sans-serif
	margin-top 0
	font-weight 800
	color #333333
h1
	line-height 45px

img
	max-width 100%
	height auto

input[type="text"]
input[type="email"]
input[type="tel"]
input[type="number"]
input[type="url"]
input[type="search"]
select
textarea
	width: 100%
	height: 36px
	padding: .5rem
textarea
	height: 90px
iframe
	width: 100%

.txt-center
	text-align center
.overflow
	overflow hidden
.search-submit
.comment-form .submit
.wpcf7-submit
.btn
	padding .5rem 1.5rem .5rem 1.5rem
	display inline-block
	color #000
	transition all .5s ease
	font-weight 400
	margin-bottom 1.25rem
	text-transform: uppercase
	&.naranja
		background-color naranja
		border-color naranja
		color #fff
		&:hover
			background-color #00642f
			color white
	&.danger
		background-color rojo
		border-color rojo
		color #fff
		&:hover
			background-color #00642f
			color white
	&.success
	&.verde
		background-color verde
		border-color verde
		color #fff
		&:hover
			background-color #00642f
			color white
	&.secondary
		background-color #e7e7e7
		border-color #b9b9b9
		color #333
		&:hover
			background-color #b9b9b9
			color white
.search-submit
.comment-form .submit
.wpcf7-submit
	background-color azul
	border-color azul
	color #fff
	border none
	&:hover
		background-color #000
		color white	

.btn
	border 2px solid #fff
	font-size inherit
	color white
	background 0 0
	text-align center
	cursor pointer
	padding 10px 30px 10px
	display inline-block
	text-transform uppercase
	outline 0
	position relative
	transition all .3s ease
	transform translateZ(0)
	background-color azul
	&:hover
		background-color: #000 
		color white
		
.flex-container-sb
	display flex
	flex-wrap wrap
	justify-content space-between
	
.flex-container-sa
	display flex
	flex-wrap wrap
	justify-content space-around



.inner
	max-width 1170px
	margin 0 auto
	padding-left 1rem
	padding-right 1rem

.header
	text-align center
	box-shadow: 1px 1px 2px rgba(0,0,0,.25)
	&-top 
		background-color oscuro
		color rgba(255,255,255,0.8)
		height 42px
		a
			color rgba(255,255,255,0.8)
		
		
		.inner
			overflow hidden
		
		.text
		.social
			line-height 42px 
		.text 
			float left
			display none
		.social
			
			a 
				display inline-block
				vertical-align middle
				color rgba(255,255,255,0.8)
				padding 0 .5rem
	&-middle
		padding .2rem 0
		overflow hidden
		border-bottom 1px solid #d0ceca
	&-logo
		display block
		width 130px
		img 
			display block
	&-contact
		font-family 'Montserrat'
		margin-top 2rem
		
		span
		i
		svg
			font-size 1.5rem
		a 
			//padding-left 1rem
			color #000
	&-menu
		display none
		position absolute
		left 0
		right 0
		top 247px
		background-color oscuro
		text-align center
		z-index 1000
		&-item
		li
			display block
			position relative
		&-link
		a
			display block
			padding .5rem
			color white
			font-family 'Montserrat'
			text-transform uppercase
		.sub-menu
			display none
			position relative
			z-index 200
			background-color oscuro
			width 100%
			a
				padding .5rem 0
				
	&-btn-menu
		background-color oscuro
		position absolute
		left 0
		right 0
		color white	
		border 0
		width 100%
		outline 0
		font-size 2rem
		border-bottom 1px solid rgba(#000, .3)
		z-index 1000
@media screen and (min-width:980px)
	.header
		text-align left
		&-top
			.text
				display block
			.social
				float right 
		&-logo
			float left
		&-contact
			float right
		&-menu
			position static
			display block !important
			background-color white
			&-item
			li
				display inline-block
				vertical-align top 
			
			&-link
			a
				color #444
				font-size 13px
				padding .4rem 2rem
				&:hover
					background-color oscuro
					color white
			.sub-menu
				position absolute
				background-color white
				border-bottom 1px solid rgba(#000, .2)
				border-left 1px solid rgba(#000, .2)
				border-right 1px solid rgba(#000, .2)
				li 
					display block
		
			
		
		&-btn-menu
			display none
